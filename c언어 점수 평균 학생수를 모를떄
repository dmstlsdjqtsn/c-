#include <stdio.h>//센티널 밸류 학생수를 모를떄
#pragma warning(disable:4996)
int main()
{
	int kor, cnt = 0, sum = 0;

	printf("%d번째 학생의 국어점수를 입력하세요", cnt + 1);
	scanf("%d", &kor);
	while (kor >= 0)
	{
		sum += kor;
		cnt++;
		printf("%d번째 학생의 국어점수를 입력하세요", cnt + 1);
		scanf("%d", &kor);


	}
	printf("평균은%f\n", (double)sum / cnt);
	return 0;
}
